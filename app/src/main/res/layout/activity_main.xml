<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#060607"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:text="0"
            android:textColor ="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColorHint="@color/white"
            />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="20dp"
            android:shrinkColumns="*"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            <Button
                style="@style/TextGrey"
                android:id="@+id/bu_7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="ajouterNbr"
                android:text="7"
                />
            <Button
                style="@style/TextGrey"
                android:id="@+id/bu_8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="ajouterNbr"
                android:text="8"
                />
            <Button
                style="@style/TextGrey"
                android:id="@+id/bu_9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="ajouterNbr"
                android:text="9"
                />
            <Button
                style="@style/TextOrange"
                android:id="@+id/bu_plus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#575454"
                android:onClick="setOperator"
                android:text="+"
                android:layout_margin="5dp"
               android:textColor="#F3EDED" />

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <Button
                    style="@style/TextGrey"
                    android:id="@+id/bu_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="ajouterNbr"
                    android:text="4"
                    />
                <Button
                    style="@style/TextGrey"
                    android:id="@+id/bu_5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="ajouterNbr"
                    android:text="5"
                    />
                <Button
                    style="@style/TextGrey"
                    android:id="@+id/bu_6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="ajouterNbr"
                    android:text="6"
                    />
                <Button
                    style="@style/TextOrange"
                    android:id="@+id/bu_moins"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#575454"
                    android:onClick="setOperator"
                    android:text="-"
                    android:layout_margin="5dp"
                    android:textColor="#FFFFFF" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <Button
                    style="@style/TextGrey"
                    android:id="@+id/bu_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="ajouterNbr"
                    android:text="1"
                    />
                <Button
                    style="@style/TextGrey"
                    android:id="@+id/bu_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="ajouterNbr"
                    android:text="2"
                    />
                <Button
                    style="@style/TextGrey"
                    android:id="@+id/bu_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="ajouterNbr"
                    android:text="3"
                    />
                <Button
                    style="@style/TextOrange"
                    android:id="@+id/bu_mul"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#575454"
                    android:onClick="setOperator"
                    android:text="*"
                    android:layout_margin="5dp"
                    android:textColor="#FFFFFF" />
             </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            <Button
                style="@style/TextGrey"
                android:id="@+id/bu_0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_span="3"
                android:layout_weight="1"
                android:onClick="ajouterNbr"
                android:text="0"
                />

            <Button
                style="@style/TextOrange"
                android:id="@+id/bu_div"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#575454"
                android:onClick="setOperator"
                android:text="/"
                android:layout_margin="5dp"
                android:textColor="#FFFFFF" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <Button

                    android:id="@+id/bu_clean"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_span="2"
                    android:background="@color/Orange"
                    android:onClick="clean"
                    android:text="AC"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    />

                <Button
                    android:id="@+id/bu_egale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_span="2"
                    android:background="@color/Orange"
                    android:onClick="calculer"
                    android:text="="
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="3dp"
                     />
            </TableRow>
        </TableLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>